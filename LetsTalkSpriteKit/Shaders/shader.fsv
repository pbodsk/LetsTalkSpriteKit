void main(void)
{
// Scale UV coords to account for rectangular window
vec2 uv = vec2(gl_FragCoord.x - 0.25 * iResolution.x, gl_FragCoord.y) / iResolution.y;

uv = 2.0 * uv;

// Double the speed
float wave = sin(iGlobalTime * 4.0);

// Scale to make the circle bigger so it reaches the far edges
float circle = (uv.x * uv.x + uv.y * uv.y) * 0.2;

//	gl_FragColor = vec4(vec3(circle + wave),1.0);
gl_FragColor = vec4(vec3(uv.y + wave),1.0);
}